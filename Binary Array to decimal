#include<bits/stdc++.h>
using namespace std;
int main()
    {
        int n,a;
        cin>>n;
        int val = 0;
        int temp = 1;
        vector<int>v;
        for(int i=0;i<n;i++)
        {
            cin>>a;
            v.emplace_back(a);
        }
        int l=v.size();
        for(int i=l-1;i>=0;i--)
        {
        
            if(v[i]==1)
            {
                 val=val+temp;
            
            
            }
           temp=temp*2;
        }
        cout<<val;
        
    }
